<!-- Masthead-->
<header class="masthead">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class='mb-6 text-4xl md:text-5xl font-bold leading-tight'>
      We rescue dogs in Baja, Mexico and rehome them with adopters in
      Canada and America
    </h1>
    <%= link_to "Browse #{Dog.all_unadopted_dogs.count} Dogs",
                adoptable_dogs_path,
                class:'custom-btn-pink' %>
  </div>
</header>

<!-- HOW TO APPLY FOR ADOPTION -->
<section class="py-16" id="how_to_apply">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-16 mt-16">

    <!--section heading-->
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold uppercase underline">
        How to apply for adoption
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
      <div class="pb-6">
        <div class="mb-6">
          <%= image_tag('sign_up.svg', width: '100', class: 'mx-auto') %>
        </div>
        <h4 class="text-xl font-semibold my-6">1. Create Account</h4>
      </div>
      <div class="pb-6">
        <div class="mb-6">
          <%= image_tag('profile.svg', width: '100', class: 'mx-auto') %>
        </div>
        <h4 class="text-xl font-semibold my-6">2. Complete a Profile</h4>
      </div>
      <div class="pb-6">
        <div class="mb-6">
          <%= image_tag('dog.svg', width: '100', class: 'mx-auto') %>
        </div>
        <h4 class="text-xl font-semibold my-6">3. Browse dogs</h4>
      </div>
      <div class="pb-6">
        <div class="mb-6">
          <%= image_tag('click.svg', width: '100', class: 'mx-auto') %>
        </div>
        <h4 class="text-xl font-semibold my-6">4. Click apply</h4>
      </div>
    </div>
  </div>
</section>

<!-- ABOUT US-->
<section class="bg-gray-100 py-16" id="about_us">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-16 mt-16">

    <!--section heading-->
    <div class="text-center mb-12">
        <h2 class="text-3xl font-bold uppercase underline">
        About us
        </h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 pb-6">
        <div class="lg:col-span-1 order-1 lg:order-1">
          <%= image_tag('danielle_2.jpg',
              class: 'rounded-lg w-full px-4 lg:px-0') %>
        </div>
        <div class="lg:col-span-1 px-4 order-3 lg:order-2">
            <p class='text-justify text-lg mb-4'>
              Baja Pet Rescue was founded by Danielle Gee and an incredible group of ladies in April of 2020. We have primarily focused on rescue efforts, operating as a foster-based program. To date, we have rescued over 300 dogs!
            </p>
            <p class='text-justify text-lg mb-6'>
              In the summer of 2024, we were forced to reevaluate our approach, we realized that we are facing an overpopulation crisis of domestic animals. With the increased difficulty in transporting dogs to the United States, we decided to focus more efforts on spay/neuter and scale back the number of dogs in our foster program.
            </p>
            <div class='text-center'>
              <%= link_to 'Read More', about_us_path,
                  class: 'custom-btn-green mt-8 mb-6' %>
            </div>
        </div>
        <div class="lg:col-span-1 order-2 lg:order-3 hidden md:block">
          <%= image_tag('danielle_3.jpg',
              class: 'w-full rounded-lg px-4 lg:px-0') %>
        </div>
    </div>
  </div>
</section>

<!--PAGE HIGHLIGHTS-->
<section class="py-16" id="highlights">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-16 mt-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
      <div class="p-6">
        <h3 class="text-2xl font-bold mb-6">
          Process
        </h3>
        <p class='mb-6 text-lg'>
          Before applying to adopt a dog it is important you read and understand how our process works.
        </p>
        <div>
          <%= link_to 'Learn more', faq_path, class: 'custom-btn-green' %>
        </div>
      </div>
      <div class="p-6">
        <h3 class="text-2xl font-bold mb-6">
          Partners
        </h3>
        <p class='mb-6 text-lg'>
          We have some amazing partners here in La Ventana who help in our dog rescue efforts.
        </p>
        <div>
          <%= link_to 'Learn more', partners_path, class: 'custom-btn-green' %>
        </div>
      </div>
      <div class="p-6">
        <h3 class="text-2xl font-bold mb-6">
          Donate
        </h3>
        <p class='mb-6 text-lg'>
          Donations help us to rescue, treat and adopt more dogs. Click here to learn how you can donate.
        </p>
        <div>
          <%= link_to 'Learn more', donate_path, class: 'custom-btn-green' %>
        </div>
      </div>
    </div>
  </div>
</section>

<% unless user_signed_in? %>
  <!-- CTA -->
  <section class="py-16 bg-gray-100" id="cta">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-16 mt-16">
      <div class="flex justify-center">
        <div class="w-full max-w-2xl border border-gray-200 p-12 shadow-sm
                    rounded-lg bg-white text-center">
          <h3 class='mb-6 text-2xl font-bold'>Become an adopter now!</h3>
          <%= link_to 'Create Account', account_select_path ,
                      class: 'custom-btn-pink' %>
        </div>
      </div>
    </div>
  </section>
<% end %>

