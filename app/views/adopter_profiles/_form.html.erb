                          class: 'mt-1 block w-40 rounded-md border-gray-300 shadow-sm focus:border-emerald-700 focus:ring-emerald-700' %>

      <% profile.custom_messages(:annual_cost).each do |error| %>
        <div class="mt-1 border border-red-200 bg-red-50 text-red-800 rounded px-3 py-2 text-sm" role="alert"><%= error.message %></div>
      <% end %>
    </div>

    <div class="mb-6" data-controller='display'>
      <p class='text-lg font-medium text-gray-700 mb-2'>
        Will you or a friend be in La Ventana in person to pick up the dog?
      </p>

      <div data-display-target='checked' class="space-x-3">
        <%= form.label :visit_laventana, 'Yes', value: 'true', class: 'text-lg font-medium text-gray-700' %>
        <%= form.radio_button :visit_laventana,
                              true,
                              data: { action: "input->display#show" } %>
        <%= form.label :visit_laventana, 'No', value: 'false', class: 'ml-3 text-lg font-medium text-gray-700' %>
        <%= form.radio_button :visit_laventana,
                              false,
                              data: { action: "input->display#hide" } %>
      </div>

      <% profile.custom_messages(:visit_laventana).each do |error| %>
        <div class="mt-1 border border-red-200 bg-red-50 text-red-800 rounded px-3 py-2 text-sm" role="alert"><%= error.message %></div>
      <% end %>

      <div data-display-target='additional' class='hidden' data-controller='counter'>
        <%= form.label :visit_dates,
            'What dates will you be in La Ventana?', class: 'block text-lg font-medium text-gray-700 mt-4 mb-1' %>
        <%= form.text_field :visit_dates, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-700 focus:ring-emerald-700' %>

        <div data-counter-target='output' class='text-sm text-gray-500 flex flex-row-reverse'></div>
      </div>

      <% profile.custom_messages(:visit_dates).each do |error| %>
        <div class="mt-1 border border-red-200 bg-red-50 text-red-800 rounded px-3 py-2 text-sm" role="alert"><%= error.message %></div>
      <% end %>
    </div>

    <div class="mb-6">
      <%= form.label :referral_source,
          'How did you find out about Baja Pet Rescue?', class: 'block text-lg font-medium text-gray-700 mb-1' %>
      <%= form.text_field :referral_source, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-700 focus:ring-emerald-700' %>

      <% profile.custom_messages(:referral_source).each do |error| %>
        <div class="mt-1 border border-red-200 bg-red-50 text-red-800 rounded px-3 py-2 text-sm" role="alert"><%= error.message %></div>
      <% end %>
    </div>

  </div>

  <div>
    <%= form.submit 'Save profile', class: 'border border-gray-700 text-gray-700 hover:bg-gray-700 hover:text-white px-6 py-2 rounded-lg font-medium transition-colors mb-3' %>
  </div>
<% end %>




