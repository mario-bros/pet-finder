
  <%= form_with model: profile, :url => profile_path do |form| %>
  <%= form.hidden_field :adopter_account_id, value: current_user.adopter_account.id %>

  <% if profile.errors.count > 0 %>
    <div class="mt-2 border border-red-200 bg-red-50 text-red-800 rounded px-4 py-3" role="alert">
      <p>Please fix the errors highlighted below.</p>
    </div>
  <% end %>

  <!--Administrative details section-->
  <div class="border border-gray-200 p-8 mb-8 rounded-lg bg-white shadow-sm">
    <h3 class="text-2xl font-bold mb-6">Contact</h3>

    <div class="mb-6">
      <%= form.label :phone_number, class: 'block text-lg font-medium text-gray-700 mb-1' %>
      <%= form.telephone_field :phone_number,
                              autofocus: true,
                              placeholder: "10 digit number",
                              class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-700 focus:ring-emerald-700' %>

      <% profile.errors.full_messages_for(:phone_number).each do |message| %>
        <div class="mt-1 border border-red-200 bg-red-50 text-red-800 rounded px-3 py-2 text-sm" role="alert"><%= message %></div>
      <% end %>
    </div>

    <div class="mb-6">
      <%= form.label :contact_method, 'Preferred contact method', class: 'block text-lg font-medium text-gray-700 mb-1' %>
      <%= form.select :contact_method,
                      ['Phone', 'Email', 'WhatsApp'],
                      { prompt: "Please select" },
                      class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-700 focus:ring-emerald-700 text-lg' %>

      <% profile.errors.full_messages_for(:contact_method).each do |message| %>
        <div class="mt-1 border border-red-200 bg-red-50 text-red-800 rounded px-3 py-2 text-sm" role="alert"><%= message %></div>
      <% end %>
    </div>

    <%# nested form for locations table %>
    <div class="mb-6">
      <%= form.fields_for :location do |location| %>
          <%= location.label :country, class: 'block text-lg font-medium text-gray-700 mb-1' %>
          <%= location.text_field :country, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-700 focus:ring-emerald-700' %>
          <% profile.location.custom_messages(:country).each do |error| %>
            <div class="mt-1 border border-red-200 bg-red-50 text-red-800 rounded px-3 py-2 text-sm" role="alert"><%= error.message %></div>
          <% end %>

          <%= location.label :province_state, 'Province/State', class: 'block text-lg font-medium text-gray-700 mt-4 mb-1' %>
          <%= location.text_field :province_state, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-700 focus:ring-emerald-700' %>
          <% profile.location.custom_messages(:province_state).each do |error| %>
            <div class="mt-1 border border-red-200 bg-red-50 text-red-800 rounded px-3 py-2 text-sm" role="alert"><%= error.message %></div>
          <% end %>

          <%= location.label :city_town, 'City/Town', class: 'block text-lg font-medium text-gray-700 mt-4 mb-1' %>
          <%= location.text_field :city_town, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-700 focus:ring-emerald-700' %>
          <% profile.location.custom_messages(:city_town).each do |error| %>
            <div class="mt-1 border border-red-200 bg-red-50 text-red-800 rounded px-3 py-2 text-sm" role="alert"><%= error.message %></div>
          <% end %>
      <% end %>
    </div>
  </div>

  <!--Lifestyle section-->
  <div class="border border-gray-200 p-8 mb-8 rounded-lg bg-white shadow-sm">
    <h4 class="text-xl font-bold mb-6">Lifestyle</h4>

    <div class="mb-6" data-controller='counter'>
      <%= form.label :ideal_dog, 'Briefly describe your ideal dog', class: 'block text-lg font-medium text-gray-700 mb-1' %>
      <%= form.text_area :ideal_dog,
                        data: { action: "input->counter#countMedium",
                                counter_target: 'input' },
