<!--page heading-->
<header class="py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl font-bold uppercase underline">
        Applications
      </h1>
    </div>
  </div>
</header>

<!--main section-->
<section class="pb-16" id="about_us">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <h5 class="text-lg font-semibold mb-3">Filter by dog name</h5>
    <%= form_with url: '/adopter_applications', method: :get do | f | %>
      <div class="flex flex-col md:flex-row md:items-end gap-4 mb-6">
        <div class="w-full md:w-1/3">
          <%= f.collection_select :dog_id, @dogs, :id, :name, { prompt: 'All' },
                                  class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-700 focus:ring-emerald-700 text-lg' %>
        </div>
        <div>
          <%= f.submit 'Submit', class: 'px-6 py-2 border border-gray-700 text-gray-700 rounded-lg hover:bg-gray-700 hover:text-white transition-colors font-medium' %>
        </div>
      </div>
    <% end %>

    <%= render 'search_results' %>

  </div>
</section>
